<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:textAppearance">@style/text_normal</item>
        <item name="android:textAppearanceSmall">@style/text_normal</item>
    </style>

    <!-- button style -->
    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/text_button</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:minWidth">32dp</item>
    </style>

    <!-- text views -->
    <style name="text_normal" parent="TextAppearance.AppCompat.Medium"></style>

    <!-- style for error messages -->
    <style name="text_error" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>
