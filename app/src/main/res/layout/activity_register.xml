<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quizarena.authorization.register.RegisterActivity">

    <EditText
        android:id="@+id/activity_register_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/account_name"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_error_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/activity_register_error_name"
        style="@style/error_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_display_name"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_account_name"
        app:layout_constraintStart_toStartOf="@+id/activity_register_account_name"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_account_name" />

    <EditText
        android:id="@+id/activity_register_display_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/display_name"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_error_display_name"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_error_name"
        app:layout_constraintStart_toStartOf="@+id/activity_register_error_name"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_error_name" />

    <TextView
        android:id="@+id/activity_register_error_display_name"
        style="@style/error_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_password1"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_display_name"
        app:layout_constraintStart_toStartOf="@+id/activity_register_display_name"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_display_name" />

    <EditText
        android:id="@+id/activity_register_password1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_error_password1"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_error_display_name"
        app:layout_constraintStart_toStartOf="@+id/activity_register_error_display_name"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_error_display_name" />

    <TextView
        android:id="@+id/activity_register_error_password1"
        style="@style/error_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_password2"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_password1"
        app:layout_constraintStart_toStartOf="@+id/activity_register_password1"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_password1" />

    <EditText
        android:id="@+id/activity_register_password2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/password_confirm"
        android:inputType="textPassword"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_error_password2"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_error_password1"
        app:layout_constraintStart_toStartOf="@+id/activity_register_error_password1"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_error_password1" />

    <TextView
        android:id="@+id/activity_register_error_password2"
        style="@style/error_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_button_confirm"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_password2"
        app:layout_constraintStart_toStartOf="@+id/activity_register_password2"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_password2" />

    <Button
        android:id="@+id/activity_register_button_confirm"
        style="@style/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_error_password2"
        app:layout_constraintStart_toStartOf="@+id/activity_register_error_password2"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_error_password2" />

    <Button
        android:id="@+id/activity_register_button_login"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
